<Page x:Class="PI.AddFlight"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PI"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="700"
      Title="AddFlight"
      Loaded="Page_Loaded">
    <Page.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Helvetica"/>
            <Setter Property="FontWeight" Value="Light"/>

            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20"
                                                                      BorderThickness="2"
                                                                      BorderBrush="White">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Opacity" Value="0.4"/>
                    <Setter Property="Foreground" Value="DeepSkyBlue"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <Grid Name ="dsadasdas" Margin="0,0,0,0">
        <Grid.Background>
            <LinearGradientBrush>
                <GradientStop Color="#7be9f6" Offset="0.0"/>
                <GradientStop Color="#f083da" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel Orientation="Vertical" Margin="0,0,380,410">
            <Label FontFamily="Helvetica"
                   FontWeight="Light" 
                   Foreground="Black" 
                   FontSize="20"
                   Background="Transparent"
                   Content="Depart Town:" Margin="78,30,60,0"/>
            <ComboBox 
                HorizontalAlignment="Left" 
                Width="182" 
                Margin="78,0,0,0"
                SelectionChanged="ComboBox_SelectionChanged"
                Name="DepartCityComboBox" 
                IsSynchronizedWithCurrentItem="True"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="0,69,380,336">
            <Label FontFamily="Helvetica"
                   FontWeight="Light" 
                   Foreground="Black" 
                   FontSize="20"
                   Background="Transparent"
                   Content="Depart Date:" Margin="78,30,60,0"/>
            <DatePicker 
                Name="DepartDate"
                Margin="78,0,60,0"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="0,142,380,239">
            <Label FontFamily="Helvetica"
                   FontWeight="Light" 
                   Foreground="Black" 
                   FontSize="20"
                   Background="Transparent"
                   Content="Depart Time:" Margin="80,30,60,0"/>
            <StackPanel Orientation="Horizontal">
                <ComboBox  HorizontalAlignment="Left" 
                    Width="49" 
                    Margin="78,0,-70,0"
                    Name="DepartHourComboBox" IsSynchronizedWithCurrentItem="True"/>
                <ComboBox  HorizontalAlignment="Left" 
                    Width="49" 
                    Margin="78,0,-70,0"
                    Name="DepartMinutsComboBox" IsSynchronizedWithCurrentItem="True"/>
                <ComboBox  HorizontalAlignment="Left" 
                    Width="49" 
                    Margin="78,0,-20,0"
                    Name="DepartTimeComboBox" IsSynchronizedWithCurrentItem="True"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="350,0,30,410">
            <Label FontFamily="Helvetica"
                   FontWeight="Light" 
                   Foreground="Black" 
                   FontSize="20"
                   Background="Transparent"
                   Content="Arrival Town:" Margin="78,30,60,0"/>
            <ComboBox 
                HorizontalAlignment="Left" 
                Width="182" 
                Margin="78,0,0,0"
                SelectionChanged="ComboBox_SelectionChanged"
                Name="ArrivalCityComboBox" IsSynchronizedWithCurrentItem="True"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="350,69,30,336">
            <Label FontFamily="Helvetica"
                   FontWeight="Light" 
                   Foreground="Black" 
                   FontSize="20"
                   Background="Transparent"
                   Content="Arrival Date:" Margin="78,30,60,0"/>
            <DatePicker 
                Name="ArrivalDate"
                Margin="78,0,60,0"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="350,142,30,239">
            <Label FontFamily="Helvetica"
                   FontWeight="Light" 
                   Foreground="Black" 
                   FontSize="20"
                   Background="Transparent"
                   Content="Arrival Time:" Margin="80,30,60,0"/>
            <StackPanel Orientation="Horizontal">
                <ComboBox  HorizontalAlignment="Left" 
                    Width="49" 
                    Margin="78,0,-70,0"
                    Name="ArrivalHourComboBox" IsSynchronizedWithCurrentItem="True"/>
                <ComboBox  HorizontalAlignment="Left" 
                    Width="49" 
                    Margin="78,0,-70,0"
                    Name="ArrivalMinutsComboBox" IsSynchronizedWithCurrentItem="True"/>
                <ComboBox  HorizontalAlignment="Left" 
                    Width="49" 
                    Margin="78,0,-20,0"
                    Name="ArrivalTimeComboBox" IsSynchronizedWithCurrentItem="True"/>
            </StackPanel>
        </StackPanel>
        <Button Height="76" 
                    Margin="204,388,224,36"
                    Name="ConfimAddFlight"
                    Click="ConfimAddFlight_Click"
                    Content="Add Flight"
                    FontSize="20"
                    FontFamily="Helvetica"
                    FontWeight="Light" 
                    Foreground="Black"
                    HorizontalAlignment="Center" Width="272" RenderTransformOrigin="0.5,0.5" >
        </Button>
        <StackPanel Orientation="Vertical" Margin="0,229,380,181">
            <Label FontFamily="Helvetica"
                FontWeight="Light" 
                Foreground="Black" 
                FontSize="20"
                Background="Transparent"
                Content="Aiplane's id:" Margin="78,30,60,0"/>
            <ComboBox 
                HorizontalAlignment="Left" 
                Width="182" 
                Margin="78,0,0,0"
                x:Name="AiplaneIdComboBox" 
                IsSynchronizedWithCurrentItem="True"/>
        </StackPanel>
    </Grid>
</Page>
