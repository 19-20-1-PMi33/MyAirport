<Window x:Class="PI.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PI"
        mc:Ignorable="d"
        Title="Menu" Height="500" Width="900"
        WindowStyle="None" ResizeMode="NoResize"
        MouseDown="Window_MouseDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="123*"/>
        </Grid.RowDefinitions>
        <DockPanel HorizontalAlignment="Left" LastChildFill="False" Margin="0" Width="198" Grid.RowSpan="2">
            <DockPanel.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#7be9f6" Offset="0.0"/>
                    <GradientStop Color="#f083da" Offset="1"/>
                </LinearGradientBrush>
            </DockPanel.Background>
            <Image Source="Photos/airplane.png" Margin="0,48,0,356" Width="203" RenderTransformOrigin="-0.594,0.547"/>
        </DockPanel>
        <TextBlock Text="MyAirplane"
                          FontWeight="Bold"
                          FontFamily="helvetica"
                          FontSize="33"
                          HorizontalAlignment="Center"
                          Foreground="White" RenderTransformOrigin="0.5,0.5" Margin="10,0,702,452" Width="188" Grid.Row="1"/>
        <Button x:Name="button" Click="Button_Click" HorizontalAlignment="Right" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="0,136,702,0" Grid.Row="1" VerticalAlignment="Top" Width="198" Height="50">
            <StackPanel Orientation="Horizontal">
                <Image Source="Photos/find.png" Width="42" Height="42"/>
                <TextBlock Text="Знайти"
                          FontWeight="Light"
                          FontFamily="helvetica"
                          FontSize="30"
                          Padding="3"
                          Foreground="White"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Stretch" 
                          Width="134" 
                          Height="40"/>
            </StackPanel>
        </Button>
        <Button x:Name="button1" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Width="198" Margin="0,192,0,0" Grid.Row="1" Height="50">
            <StackPanel Orientation="Horizontal">
                <Image Source="Photos/calendar.png" Width="42" Height="42"/>
                <TextBlock Text="Розклад"
                          FontWeight="Light"
                          FontFamily="helvetica"
                          FontSize="30"
                          Padding="3"
                          Foreground="White"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Stretch" 
                          Width="140" 
                          Height="40"/>
            </StackPanel>
        </Button>
        <Button x:Name="button1_copy" HorizontalAlignment="Left" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" VerticalAlignment="Top" Width="198" Margin="0,247,0,0" Grid.Row="1" Height="50">
            <StackPanel Orientation="Horizontal">
                <Image Source="Photos/planeticket.png" Width="42" Height="42"/>
                <TextBlock Text="Мої квитки"
                          FontWeight="Light"
                          FontFamily="helvetica"
                          FontSize="30"
                          Padding="3"
                          Foreground="White"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Stretch" 
                          Width="142" 
                          Height="40"/>
            </StackPanel>
        </Button>
        <Button x:Name="button1_Copy1" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="198" Margin="0,302,0,0" Grid.Row="1" Height="50">
            <StackPanel Orientation="Horizontal">
                <Image Source="Photos/profile.png" Width="42" Height="42"/>
                <TextBlock Text="Кабінет"
                          FontWeight="Light"
                          FontFamily="helvetica"
                          FontSize="30"
                          Padding="3"
                          Foreground="White"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Stretch" 
                          Width="142" 
                          Height="40"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>
